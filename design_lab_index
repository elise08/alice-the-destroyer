    <script>
        function showPage(pageId) {
            document.getElementById('page-listing').classList.add('hidden');
            document.getElementById('page-remixer').classList.add('hidden');
            document.getElementById('nav-listing').classList.remove('active', 'text-white');
            document.getElementById('nav-remixer').classList.remove('active', 'text-white');
            document.getElementById('nav-listing').classList.add('text-v-text-dim');
            document.getElementById('nav-remixer').classList.add('text-v-text-dim');

            document.getElementById('page-' + pageId).classList.remove('hidden');
            document.getElementById('nav-' + pageId).classList.add('active', 'text-white');
            document.getElementById('nav-' + pageId).classList.remove('text-v-text-dim');
        }
    </script>

